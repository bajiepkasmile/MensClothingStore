<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_big"
                android:layout_marginLeft="@dimen/spacing_big"
                android:layout_marginRight="@dimen/spacing_big"
                android:text="@string/name"
                style="@style/TextViewAddCommentToProductHeader"
                />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_big"
                android:layout_marginRight="@dimen/spacing_big"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:hint="@string/introduce_yourself"
                style="@style/EditTextAddCommentToProduct"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_big"
                android:layout_marginLeft="@dimen/spacing_big"
                android:layout_marginRight="@dimen/spacing_big"
                android:text="@string/comment"
                style="@style/TextViewAddCommentToProductHeader"
                />

            <EditText
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_big"
                android:layout_marginRight="@dimen/spacing_big"
                android:gravity="top"
                android:maxLength="256"
                android:hint="@string/few_words"
                style="@style/EditTextAddCommentToProduct"
                />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_btn_add"
                android:layout_marginTop="@dimen/spacing_big"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:text="@string/add"
                android:textColor="@color/white"
                app:backgroundTint="@color/gray_dark"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>