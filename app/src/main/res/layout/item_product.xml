<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_item_height"
    android:layout_margin="@dimen/spacing_tiny"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/card_corner"
    app:elevation="@dimen/card_elevation"
    tools:layout_width="150dp"
    >

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/content_desc.product_image"
        tools:layout_height="200dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingLeft="@dimen/spacing_tiny"
        android:paddingRight="@dimen/spacing_tiny"
        android:orientation="vertical"
        android:background="@color/transparent_black"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            tools:text="Хлопковая рубашка Regular fit"
            style="@style/TextViewProductItem"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="2348 руб."
            style="@style/TextViewProductItem"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>