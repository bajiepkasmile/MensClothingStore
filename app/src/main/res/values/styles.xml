<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Toolbar">
        <item name="android:background">@color/black</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_toolbar</item>
    </style>

    <style name="TextViewNetworkIsNotAvailable">
        <item name="android:text">@string/error.network_is_not_available</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:drawableTop">@drawable/ic_wifi_off</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
    </style>

    <style name="TextViewLoading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextViewProductItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewDetailsHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="TextViewCommentsLoadingFailure">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextViewAddCommentToProductHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="EditTextAddCommentToProduct">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

</resources>
